
@model AppUserListDto

<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
    <div class="sb-sidenav-menu">
        <div class="nav">
            <div class="sb-sidenav-menu-heading">
                <img src="~/images/@Model.Picture" alt="@Model.Name" class="w-100 img-thumbnail" style="height:12rem!important" />
                <h3 style="color:white; margin-top:5px; text-transform:capitalize; text-align:center ">@Model.Name @Model.Surname</h3>
            </div>
            <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-home" style="font-size:24px"></i>&nbsp; Anasayfa</div>

            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Priority" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt" style="font-size:24px"></i>&nbsp; Aciliyet İşlemleri</div>

            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Work" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-tasks" style="font-size:28px"></i> &nbsp;Görev İşlemleri</div>

            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="WorkOrder" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-atom" style="font-size:28px"></i> &nbsp; İş Emirleri</div>

            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Chart" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-chart-line" style="font-size:28px"></i> &nbsp; Grafikler</div>

            </a>
            
            <a class="nav-link position-relative" asp-area="Admin" asp-controller="Notification" asp-action="Index">
                <div class="sb-nav-link-icon">
                    <i class="fas fa-bell" style="font-size:28px"></i>
                    @if (ViewBag.notificationCount > 0)
                    {
                        <sub class="badge badge-danger badge-pill position-absolute" style="bottom:1.450rem !important; left:1.150rem !important">@ViewBag.notificationCount</sub>
                    }


                    &nbsp; Bildirimler

                </div>

            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Profile" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-user" style="font-size:28px"></i> &nbsp; Profilim </div>

            </a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="SignOut">
                <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt" style="font-size:28px"></i> &nbsp; Çıkış Yap</div>

            </a>


        </div>
    </div>

</nav>