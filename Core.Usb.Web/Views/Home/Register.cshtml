@model AppUserAddDto
@{
    ViewData["Title"] = "Register";
    Layout = "";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Page Title - SB Admin</title>
    <link href="~/Template/startbootstrap-sb-admin-gh-pages/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
   
</head>
<body class="cagri">
    <div id="layoutAuthentication" style="margin-top:125px">
        <div id="layoutAuthentication_content">
            <main class="">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header bg-info"><h3 class="text-center font-weight-light my-4">Hesap Oluştur</h3></div>
                                <div class="card-body">
                                    <form method="post" asp-action="Register" asp-controller="Home">
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" asp-for="Name">Ad</label> <span class="text-danger ml-5" asp-validation-for="Name"></span>
                                                    <input class="form-control py-4" asp-for="Name" type="text" placeholder="Adınızı giriniz" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" asp-for="Surname">Soyad</label><span class="text-danger ml-5" asp-validation-for="Surname"></span>
                                                    <input class="form-control py-4" asp-for="Surname" type="text" placeholder="Soyadınızı giriniz" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1"  asp-for="UserName">Kullanıcı Adı</label><span class="text-danger ml-5" asp-validation-for="UserName"></span>
                                            <input class="form-control py-4"  asp-for="UserName" type="text" aria-describedby="emailHelp" placeholder="Kullanıcı Adını giriniz" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" asp-for="Email">Email</label><span class="text-danger ml-5" asp-validation-for="Email"></span>
                                            <input class="form-control py-4" asp-for="Email" type="email" aria-describedby="emailHelp" placeholder="Email adresinizi giriniz" />
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" asp-for="Password">Şifre</label><span class="text-danger ml-5" asp-validation-for="Password"></span>
                                                    <input class="form-control py-4" asp-for="Password" type="password" placeholder="Şifrenizi giriniz" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" asp-for="ConfirmPassword">Şifre Onayı</label><span class="text-danger ml-1" asp-validation-for="ConfirmPassword"></span>
                                                    <input class="form-control py-4" asp-for="ConfirmPassword" type="password" placeholder="Şifrenizi tekrar giriniz" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mt-4 mb-0"><button type="submit" class="btn btn-info btn-block" asp-controller="Home" asp-action="Register">Hesap Oluştur</button></div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a asp-controller="Home" asp-action="SignIn">Hesabınız var mı? Giriş sayfasına gidin</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
      
      
        
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Template/startbootstrap-sb-admin-gh-pages/dist/js/scripts.js"></script>
</body>
</html>



