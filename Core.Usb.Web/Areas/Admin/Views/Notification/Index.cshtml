@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{

    @foreach (var item in Model)
    {

        <div class="w-25 mx-auto p-3 mt-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header"></div>
                <div class="card-body">
                    <p class="card-text">@item.Explanation</p>
                </div>
                <a asp-action="ReadNotification" asp-controller="Notification"  asp-route-id="@item.Id"class="btn btn-success btn-sm float-right"> Okundu olarak işaretle <i class="fas fa-check ml-2"></i> </a>
            </div>

        </div>
    }

}
else
{
    <div class="text-center">
        <h4 class="mt-5 text-danger ">Bildirim Bulunmamaktadır </h4>
        <br />
    </div>
}


