@model AppUserListDto
@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }


@if (TempData["message"] != null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["message"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}

<div class="row mt">
    <div class="col-lg-12">

        <div class="form-panel">
            <h4><i class="fa fa-angle-right"></i> Profil</h4>
            <hr />
            <form asp-action="Index" class="form-horizontal style-form" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="col-lg-2 control-label">Ad : </label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Name" id="f-name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Soyad : </label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Surname" id="f-name" class="form-control">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Email : </label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Email" id="f-name" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group last">
                    <div class="row">
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-4 form-group">
                            
                            <div class="w-75 p-3">
                                <h4>Profil Fotoğrafınız</h4>
                                <img src="/images/@Model.Picture" class="img-thumbnail" style="height:15rem!important" alt="@Model.Name">
                            </div>
                        </div>
                        

                        <div class="col-md-4 form-group">
                            <div id="alanOnizleme" style="display: none !important;">
                                
                                <div class="w-75 p-3">
                                    <h4>Seçtiğiniz profil fotoğrafı</h4>
                                    <img id="resimOnizleme" src=""   style="height:15rem!important" class="img-thumbnail ">
                                </div>
                            </div>
                        </div>

                    </div>
                    <label class="control-label col-md-3">Resim Yükleme</label>
                    <div class="custom-file" style="max-width:400px;">
                        <input type="file" name="resim" class="custom-file-input" id="resim" aria-describedby="resim">
                        <label class="custom-file-label" for="resim">Resim Seç</label>
                    </div>

                </div>

                <button type="submit" class="btn btn-info btn-sm mt-5">Kaydet</button>
            </form>
        </div>
        <!-- /form-panel -->
    </div>
</div>

@section JavaScript
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}