@model List<PriorityListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{
    <div class="w-50 mx-auto mb-3">
        <a asp-area="Admin" asp-controller="Priority" asp-action="CreatePriority" class="btn btn-dark mt-5 ">Yeni Aciliyet Durumu <i class="fas fa-plus ml-2"></i></a>
    </div>


    <table class="table table-striped table-bordered w-50 mx-auto">

        <thead>
            <tr class="table table-info">
                <th>Tanım</th>
                <th>Güncelle</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="UpdatePriority" asp-controller="Priority" asp-route-id="@item.Id">Güncelle <i class="fas fa-pencil-alt ml-2"></i></a>
                    </td>

                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div class="text-center">
        <h4 class="mt-5 text-danger ">Sistemde Kayıtlı Görev Bulunmamaktadır </h4>
        <br />
        <a asp-area="Admin" asp-controller="Priority" asp-action="CreatePriority" class="btn btn-primary mt-5 ">Yeni Aciliyet Durumu Ekle</a>

    </div>
}




